<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home1"
    android:background="@drawable/pool2">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/offeredrides"
        android:textColor="#8a1d64"
        android:textSize="15dp"
        android:text="Past Offered Rides"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past Booked rides"
        android:layout_marginLeft="20dp"
        android:textColor="#8a1d64"
        android:textSize="15dp"
        android:id="@+id/bookedrides"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Find a Ride"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="400dp"/>

    <Button
        android:id="@+id/btnoffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Offer a Ride"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="15dp"/>

</LinearLayout>